card-size(n)
  width n
  height n
  line-height n

selected-size(n)
  height n
  line-height n

card-text-color = white
card-color = #0E9A9A
menu-border-color = #007F7F
menu-color = #52BCBC
menu-link-bkgd-color = #52BCBC
menu-link-bkgd-color-active = #0E9A9A
menu-link-color = white
title-color = white

html, body
  padding 0
  margin 0
  font-size 100%
  width 100%
  height 100%
  font-weight 400
  font-family 'Montserrat', 'Helvetica Neue', Arial, sans-serif
a
  text-decoration none
ul
  padding 0
  margin 0
  list-style-type none
  li
    display inline
    a
      display inline-block

#menu
  text-align center
  margin-bottom 50px
  background-color menu-color
  overflow hidden
  box-shadow 0 4px 4px rgba(0, 0, 0, 0.3)
  h1
    color title-color
    font-size 2em
    font-weight 400
    padding 0
    margin 0.2em 0 0.2em 0
    letter-spacing 3px
  nav
    li
      display inline-block
      width 50%
    a
      width 100%
      padding 0.5em 0
      color menu-link-color
      font-weight 700
      background-color menu-link-bkgd-color
      &.active
        box-shadow inset 0 2px 4px #007F7F
        background-color menu-link-bkgd-color-active
        color #006464

#cards
  width 100%
  text-align center
  position relative
  li
    a
      background-color card-color
      box-shadow 4px 4px 4px rgba(0, 0, 0, 0.3)
      color card-text-color
      text-align center
      font-weight 700
    &.selected
      display none
      &.active
        display block
        position absolute
        left 0
        top 0
        width 100%
        height 100%
        z-index 2
        a
          display block
          margin 0 20px
          font-size 6em
          border-radius 6px
    a
      border-radius 3px
      font-size 1.5em
      margin 10px

@media screen and (max-height: 600px)
  #menu
    margin-bottom 30px
  #cards
    .selected.active
      a
        selected-size 400px
@media screen and (min-height: 600px) and (max-height: 650px)
  #cards
    .selected.active
      a
        selected-size 450px
@media screen and (min-height: 650px) and (max-height: 700px)
  #cards
    .selected.active
      a
        selected-size 470px
@media screen and (min-height: 700px) and (max-height: 750px)
  #cards
    .selected.active
      a
        selected-size 520px
@media screen and (min-height: 750px)
  #cards
    .selected.active
      a
        selected-size 560px

@media screen and (max-width: 350px)
  a.col2
    card-size 110px
  a.col3
    card-size 80px
@media screen and (min-width: 350px) and (max-width: 400px)
  a.col2
    card-size 120px
  a.col3
    card-size 90px
@media screen and (min-width: 400px) and (max-width: 420px)
  a.col2
    card-size 140px
  a.col3
    card-size 100px
@media screen and (min-width: 420px)
  a.col2
    card-size 160px
  a.col3
    card-size 110px
