card-text-color = white
card-color = #0E9A9A
menu-border-color = #007F7F
menu-color = #52BCBC
menu-link-bkgd-color = #52BCBC
menu-link-bkgd-color-active = #0E9A9A
menu-link-color = white
title-color = white

html, body
  padding 0
  margin 0
  font-size 100%
  -webkit-text-size-adjust 100%
  width 100%
  height 100%
  font-weight 400
  font-family 'Montserrat', 'Helvetica Neue', Arial, sans-serif
a
  text-decoration none
ul
  padding 0
  margin 0
  list-style-type none
  li
    display inline
    a
      display inline-block

#menu
  text-align center
  height 94px
  background-color menu-color
  overflow hidden
  box-shadow 0 4px 4px rgba(0, 0, 0, 0.3)
  h1
    color title-color
    font-size 2em
    font-weight 400
    padding 0
    margin 0.2em 0 0.2em 0
    letter-spacing 3px
  nav
    li
      display inline-block
      width 50%
    a
      width 100%
      padding 0.75em 0
      color menu-link-color
      font-weight 700
      background-color menu-link-bkgd-color
      &.active
        box-shadow inset 0 2px 4px #007F7F
        background-color menu-link-bkgd-color-active
        color #006464

#cards
  margin-top 20px
  width 100%
  text-align center
  position relative
  li
    a
      background-color card-color
      box-shadow 4px 4px 4px rgba(0, 0, 0, 0.3)
      color card-text-color
      text-align center
      font-weight 700
      border-radius 3px
      font-size 1.5em
    &.selected
      display none
      &.active
        display block
        position absolute
        left 0
        top 0
        width 100%
        height 100%
        z-index 2
        a
          display block
          margin 0 20px
          font-size 6em
          border-radius 6px